<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#FF9800</item>
    </style>

    <style name="for_buttons">
        <item name="android:layout_width">@dimen/_114dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="for_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:padding">@dimen/_8dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="for_linear_layout">
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="for_text_view_with_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>

    </style>

</resources>
